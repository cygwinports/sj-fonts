inherit font

NAME="font-sjfonts-ttf"
VERSION=2.0.2
RELEASE=1
CATEGORY="X11"
SUMMARY="Cursive handwriting TTF fonts"
DESCRIPTION="Two cursive handwriting fonts by Steve Jordi released under the GPL"
HOMEPAGE="http://sjfonts.sourceforge.net/"
SRC_URI="mirror://sourceforge/sjfonts/sjfonts.${VERSION}.tar.bz2"
SRC_DIR=.

src_compile() { :; }

src_install() {
	cd ${S}
	fontinto TTF
	dofont *.ttf
}
